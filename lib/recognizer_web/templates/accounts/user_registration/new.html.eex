<div class="box">
  <h2 class="title is-2 mb-5 has-text-centered-mobile">Create Account</h2>

  <%= form_for @changeset, Routes.user_registration_path(@conn, :create), fn f -> %>
    <div class="field">
      <%= label f, :first_name, class: "label" %>

      <div class="control">
        <%= text_input f, :first_name, class: input_classes(f, :first_name), required: true %>
      </div>

      <%= error_tag f, :first_name %>
    </div>

    <div class="field">
      <%= label f, :last_name, class: "label" %>

      <div class="control">
        <%= text_input f, :last_name, class: input_classes(f, :last_name), required: true %>
      </div>

      <%= error_tag f, :last_name %>
    </div>

    <div class="field">
      <%= label f, :email, "Email Address", class: "label" %>

      <div class="control">
        <%= email_input f, :email, class: input_classes(f, :email), required: true %>
      </div>

      <%= error_tag f, :email %>
    </div>

    <div class="field">
      <%= label f, :password, class: "label" %>

      <div class="control">
        <%= password_input f, :password, class: input_classes(f, :password), required: true %>
      </div>

      <%= error_tag f, :password %>
    </div>

    <div class="buttons is-right mt-5">
      <div class="control">
        <%= submit "Create Account", class: "button is-secondary"%>
      </div>
    </div>
  <% end %>

  <hr class="has-background-grey-lighter" />

  <p>
    Already have an account? <%= link "Log in", to: Routes.user_session_path(@conn, :new) %>
  </p>
</div>
